    "@types/express": "^4.17.15",
    "@types/mocha": "^10.0.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.7",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "aws-sdk": "^2.1257.0",
    "axios": "^1.2.1",
