    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "sqs-consumer": "^5.7.0",
    "typedi": "^0.10.0",
    "winston": "^3.8.2"
  },
